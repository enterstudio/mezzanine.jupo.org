
upstream %(proj_name)s {
    server unix:%(proj_path)s/gunicorn.sock fail_timeout=0;
}

server {
    listen 80;
    server_name mezzaninecms.com www.mezzaninecms.com;
    rewrite ^(.*) http://%(domains_nginx)s$1 permanent;
}

server {

    listen 80;
    listen 443;
    server_name %(domains_nginx)s;
    client_max_body_size 10M;
    keepalive_timeout    15;

    ssl                  on;
    ssl_certificate      conf/%(proj_name)s.crt;
    ssl_certificate_key  conf/%(proj_name)s.key;
    ssl_session_cache    shared:SSL:10m;
    ssl_session_timeout  10m;

    location / {
        proxy_redirect      off;
        proxy_set_header    Host                    $host;
        proxy_set_header    X-Real-IP               $remote_addr;
        proxy_set_header    X-Forwarded-For         $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forwarded-Protocol    $scheme;
        proxy_pass          http://%(proj_name)s;
    }

    location /static/ {
        root            %(proj_path)s;
        access_log      off;
        log_not_found   off;
    }

    location /robots.txt {
        root            %(proj_path)s/static;
        access_log      off;
        log_not_found   off;
    }

    location /favicon.ico {
        root            %(proj_path)s/static/img;
        access_log      off;
        log_not_found   off;
    }

    location /docs/ {
        alias %(venv_home)s/docs/mezzanine/docs/build/;
    }

}

server {

    listen 80;
    server_name cartridge.jupo.org;

    location / {
        root %(venv_home)s/docs/cartridge/docs/build/;
    }

}
